<!-- Blog DETAIL -->
<!-- ========================================================= -->
<div id="blog-detail-container">
  <!-- thumbnail -->
  <div class="thumbnail mb-4">
    <img src="<%= blog.thumbnail %>" class="img-fluid shadow-lg" alt="blog thumbnail" />
  </div>
  <div></div>

  <!-- blog info -->
  <p id="blog-info" class="text-muted">
    <span> <%= blog.updated_at %></span>
    <span
      ><img
        class="avatar ms-4 me-2"
        src="<%= blog.author.avatar %>"
        alt="author_avatar"
    /></span>
    <span> <%= blog.author.username %> </span> â€¢
    <span> <%= blog.author.name %> </span>
    <!-- blog actions -->
    <% if (user && user.role==="admin" ) { %>
    <span class="course-admin-options opacity-50">
      <button class="btn">
        <p>
          <a
            id="edit-btn"
            href="/api/blog/<%= blog.id %>/update?blogId=<%= blog.id %>"
            ><i class="fas fa-edit me-2"></i
          ></a>
        </p>
      </button>
      <button class="btn">
        <p>
          <a
            class="delete-btn"
            href="/api/blog/<%= blog.id %>/delete?blogId=<%= blog.id %>"
            ><i class="fas fa-trash-alt me-2"></i
          ></a>
        </p>
      </button>
    </span>
    <% } %>
  </p>

  <!-- blog content -->
  <div>
    <h1 class="fw-bolder text-uppercase blog-title"><%= blog.title %></h1>
  </div>
  <h3 class=""><%= blog.description %></h3>
  <hr />
  <div id="text_content">
    <!-- Ensure to use <%- %> to render HTML unescaped / NOT <%= %> -->
    <pre><code><%- htmlContent %></code></pre>
  </div>
</div>

<style>
 .detail-container {
    position: relative; /* Ensures z-index works correctly */
    z-index: 1; /* Places the content above the blurred background */
    color: white;
    padding: 20px;
  }

  /* Additional specific styles for each detail */
  .thumbnail {
    border-bottom: 1px solid #ccc; /* Add border to thumbnail */
    padding-bottom: 10px; /* Add space below thumbnail */
  }

  /* Blog Detail Styles */
  body {
    background: #f7e3bf;
  }

  #blog-detail-container {
    margin: 5.5rem auto;
    background: #fff;
    padding: 0 2rem;
  }
</style>
