<div class="courses-container">
  <div class="section-title">
    <h1>All Courses</h1>
  </div>

  <div class="courses-grid">
    <% courses.reverse().forEach((course, index) => { %>
      <div class="course-item">
        <a href="/api/course/<%= course.id %>/overview">
          <img src="<%= course.thumbnail %>" alt="thumbnail-<%= course.slug %>" />
          <h2><%= course.title %></h2>
          <p>USD <%= course.usd_price %> | ARS <%= course.ars_price %></p>
          <p><%= course.description %></p>
        </a>

        <% if (isAdmin) {%>
          <div class="course-actions">
            <p>
              <a href="/api/course/<%= course.id %>/update">Edit</a>
            </p>
            <p>
              <a href="/api/course/<%= course.id %>/delete?courseId=<%= course.id %>">Delete</a>
            </p>
          </div>
        <% }%>
        

      </div>
      <% if ((index + 1) % 4 === 0 && index !== courses.length - 1) { %>
        </div>
        <div class="courses-grid">
      <% } %>
    <% }); %>
  </div>
</div>
