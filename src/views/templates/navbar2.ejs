<header class="header">
    <a href="#" class="logo">Logo</a>

    <input type="checkbox" id="check">
    <label for="check" class="icons">
        <i class='bx bx-menu' id="menu-icon"></i>
        <i class='bx bx-x' id="close-icon"></i>
    </label>

    <nav class="navbar">
        <a href="/" style="--i:0;">Home</a>
        <a href="/#about" style="--i:1;">Acerca</a>
        <a href="/api/courses?page=1&perPage=6" style="--i:2;">Cursos</a>
        <a href="/api/blog?page=1&perPage=6" style="--i:2;">Blogs</a>
        <a href="#" style="--i:3;">ingresar</a>
        <a href="#" style="--i:4;">Registrar</a>
    </nav>
</header>

<!-- =====================\ CSS /=============================== -->
<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800;900&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
    }

    .header {
        position: fixed;
        top: 0;
        width: 100%;
        padding: 1.3rem 10%;

        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 100;
    }

    .header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, .1);
        backdrop-filter: blur(50px);
        z-index: -1;
    }

    .header::after { /* moving reflect inside header */
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255, .4));
        transition: .5s;
    }

    .header:hover::after { /* on hover move*/
        left: 100%;
    }

    .logo {
        font-size: 2rem;
        color: #fff;
        text-decoration: none;
        font-weight: 700;
    }

    .navbar a {
        font-size: 1.15rem;
        color: #fff;
        text-decoration: none;
        font-weight: 500;
        margin-left: 2.5rem;
    }

    #check {
        display: none;
    }

    .icons {
        position: absolute;
        right: 5%;
        font-size: 2.8rem;
        color: #fff;
        cursor: pointer;
        display: none;
    }

    /* BRAKPOINTS */
    @media (max-width: 992px) {

        /*LG ↓*/
        .header {
            padding: 1.3rem 5%;
        }
    }

    @media (max-width: 768px) {

        /* MD ↓*/
        .icons {
            display: inline-flex;
        }

        #check:checked~.icons #menu-icon {
            /* hide on click*/
            display: none;
        }

        .icons #close-icon {
            display: none;
        }

        #check:checked~.icons #close-icon {
            /* show on click*/
            display: block;
        }

        .navbar {
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            height: 0;
            background: rgba(0, 0, 0, .1);
            backdrop-filter: blur(50px);
            box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .1);
            overflow: hidden;
            transition: .3s ease;
        }
        
        #check:checked~.navbar { /* on click display navbar div*/
            height: 17.7rem;
        }

        .navbar a {
            display: block;
            font-size: 1.1rem;
            margin: 1.5rem 0;
            text-align: center;
            transition: .3s ease;
            opacity: 0;
        }
        
        #check:checked~.navbar a { /* on click hide navbar div*/
            transform: translateY(0);
            opacity: 1;
            transition-delay: calc(.15s * var(--1));
        }
    }
</style>